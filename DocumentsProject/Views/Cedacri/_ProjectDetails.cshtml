@using Application.Projects.Queries.GetProjectDetails;
@model ProjectDetailsDto

<form class="bg-white" id="projectDetailsForm" asp-antiforgery="true">

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="Name">Name: </label>
        <div class="col-sm-9">
            <input class=" form-control custom-file-input" asp-for="Name" disabled>
        </div>
        <br>
    </div>

    <div class="mb-3 row " id="institutionSelect">
        <label class=" col-sm-3 form-label" asp-for="Institution">Institution: </label>
        <div class="col-sm-9">
            <input class=" form-control custom-file-input" asp-for="Institution" disabled>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="DateFrom">Date From: </label>
        <div class="col-sm-9">
            <input class="form-control" id="dateFrom" type="date" asp-for="DateFrom" disabled>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="DateFrom">Date Till: </label>
        <div class="col-sm-9">
            <input class="form-control" id="dateTill" type="date" asp-for="DateTill" disabled>
        </div>
        <br>
    </div>

    <label class="form-label" asp-for="AdditionalInfo">Additional Informations: </label>
    <br>
    <div class="mb-3 row justify-content-end">
        <div class="col-sm-9">
            <textarea class="form-control" type="text" asp-for="AdditionalInfo" disabled></textarea>
        </div>
        <br>
    </div>

    <div class="mb-3 row ">
        <label class="col-sm-3 form-check-label" asp-for="IsActive">Active: </label>
        <div class="col-sm-9">
            <div class=" form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for="IsActive" disabled>
            </div>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="User">User: </label>
        <div class="col-sm-9">
            <input class=" form-control custom-file-input" asp-for="User" disabled>
        </div>
        <br>
    </div>

    <div class="mb-3 row justify-content-end">
        <div class="col-sm-2">
            <button type="button" class="btn btn-secondary float-sm-end" data-bs-dismiss="modal">Close</button>
        </div>
    </div>

</form>