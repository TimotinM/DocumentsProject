@using Application.Projects.Commands.UpdateProject;
@model UpdateProjectDto

<form class="bg-white" id="updateProjectForm" asp-controller="Cedacri" asp-action="UpdateProject" asp-route-projectId="@Model.Id" asp-antiforgery="true">

    <div id="updateProjectErrors" class="alert alert-danger" hidden>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="Name">Name: </label>
        <div class="col-sm-9">
            <input class=" form-control custom-file-input" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row " id="institutionSelect">
        <label class="col-sm-3 form-label" asp-for="IdInstitution">Institution: </label>
        <div class="col-sm-9">
            <input type="hidden" asp-for="IdInstitution"/>
            <select id="institutionValue" class="form-select" asp-for="IdInstitution" disabled>
                @foreach (var item in ViewBag.Institutions)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="IdInstitution"></span>
        </div>
        <br>
    </div>


    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="DateFrom">Date From: </label>
        <div class="col-sm-9">
            <input class="form-control" id="dateFrom" type="date" asp-for="DateFrom" disabled>
            <span class="text-danger" asp-validation-for="DateFrom"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-3 form-label" asp-for="DateTill">Date Till: </label>
        <div class="col-sm-9">
            <input class="form-control" id="dateTill" type="date" asp-for="DateTill" onfocus="blur">
            <span class="text-danger" asp-validation-for="DateTill"></span>
        </div>
        <br>
    </div>

    <label class="form-label" asp-for="AdditionalInfo">Additional Informations: </label>
    <br>
    <div class="mb-3 row justify-content-end">
        <div class="col-sm-9">
            <textarea class="form-control" type="text" asp-for="AdditionalInfo"></textarea>
            <span class="text-danger" asp-validation-for="AdditionalInfo"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row ">
        <label class="col-sm-3 form-check-label" asp-for="IsActive">Active: </label>
        <div class="col-sm-9">
            <div class=" form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" asp-for="IsActive">
            </div>
        </div>
        <br>
    </div>

    <div class="mb-3 row justify-content-end">
        <div class="col-sm-3">
            <button type="button" onclick="updateProject()" class="btn btn-primary float-sm-end">Submit</button>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-secondary float-sm-end" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>

</form>
