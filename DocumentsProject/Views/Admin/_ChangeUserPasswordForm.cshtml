@using Application.Users.Conmmand.ChangeUserPassword
@model ChangeUserPasswordDto

<form class="bg-white" id="changeUserPasswordForm" asp-action="ChangeUserPassword" asp-controller="Admin" asp-route-userId="@ViewBag.UserId" asp-antiforgery="true">

    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    <div class="mb-3 row">
        <label class=" col-sm-4 form-label" asp-for="CurrentPassword">Current Password: </label>
        <div class="col-sm-8">
            <input class=" form-control" type="password" asp-for="CurrentPassword">
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-4 form-label" asp-for="NewPassword">New Password: </label>
        <div class="col-sm-8">
            <input class="form-control" type="password" asp-for="NewPassword">
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row">
        <label class=" col-sm-4 form-label" asp-for="ConfirmNewPassword">Confirm: </label>
        <div class="col-sm-8">
            <input class="form-control" type="password" asp-for="ConfirmNewPassword">
            <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <br>
    </div>

    <div class="mb-3 row justify-content-end">
        <div class="col-sm-4">
            <button type="button" onclick="changeUserPassword()" class="btn btn-primary float-sm-end">Submit</button>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-secondary float-sm-end" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>

</form>
